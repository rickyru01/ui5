<mvc:View xmlns:c="sap.ui.core" controllerName="ricky.test.ui5.demo1.controller.DynamicPageAnalyticalTable" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:u="sap.ui.unified" 
    xmlns="sap.m" 
    xmlns:t="sap.ui.table" 
    xmlns:f="sap.f" 
    xmlns:tnt="sap.tnt" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:layout="sap.ui.layout" height="100%">
    <html:style>
    
div#__data2, div#__data5 {
    /* text-align: center; */
    display: flex;
    align-items: center;
}

    </html:style>
    <f:DynamicPage id="dynamicPageId" class="ovpApplication" preserveHeaderStateOnScroll="false" headerExpanded="{/headerExpanded}">

        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox id="markHBox" class="sapUICompVarMngmtText sapUiTinyMarginTop">
                        <FlexBox id="markFlexBox" alignItems="Center" justifyContent="Start" visible="true">
                            <items id="markItems">
                                <Title id="idVariantTitle" level="H4" titleStyle="H4"/>
                                <Button id="showVariantSetsBtn" icon="sap-icon://navigation-down-arrow" type="Transparent" press="onVariantSetsShowPress" />
                            </items>
                        </FlexBox>
                        <Label text="abc" tooltip="abc" class="sapMH4Style" visible="false"/>
                        <tnt:InfoLabel id="markInfoLabel" text="Production" visible="true" colorScheme= "1"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>


    </f:DynamicPage>
</mvc:View>