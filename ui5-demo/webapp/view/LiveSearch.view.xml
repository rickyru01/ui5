<mvc:View
	controllerName="ricky.test.ui5.demo1.controller.LiveSearch"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%">
	<Page showHeader="false" >
		<subHeader>
			<OverflowToolbar>
				<SearchField liveChange=".onSearch" width="50%" />
			</OverflowToolbar>
		</subHeader>
		<List
			id="idList"
			items="{/ProductCollection}"
			selectionChange=".onSelectionChange"
			mode="MultiSelect"
			growing="true"
			growingThreshold="50"
			includeItemInSelection="true">
			<infoToolbar>
				<OverflowToolbar visible="false" id="idInfoToolbar">
					<Label id="idFilterLabel" />
				</OverflowToolbar>
			</infoToolbar>
			<StandardListItem
				title="{Name}"
				description="{ProductId}"
				icon="{ProductPicUrl}"
				iconDensityAware="false"
				iconInset="false" />
		</List>
	</Page>
</mvc:View>